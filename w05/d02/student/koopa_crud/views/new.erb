<h1>Create a Koopa!</h1>
<form method="get" action="('/')">

  <label>Name:<br/>
    <input type="text" name="name"/>
  </label>

  <label>Color:<br/>
    <select>
      <option value="red">red</option>
      <option value="red">blue</option>
      <option value="red">green</option>
      <option value="red">yellow</option>
      <option value="red">purple</option>
      <option value="red">orange</option>
    </select>

  <label>Photo Url:<br/>
    <input type="url" name="photo_url"/>
  </label>

  <label>Does your Koopa have a shell?<br/>
    <label>
    <input type="radio" checked="checked" name="has_shell" value="yes"/>Yes</label>
    <label>
    <input type="radio" name="has_shell" value="no"/>No</label>
  </label>

  </form>
